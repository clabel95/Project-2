{{#each userRecipe as |userData| }}
    <div id="card1">

        <div class="card">
            <div class="card-image">
                <a href="/recipe/{{userData.id}}">
                <img src="/images/chad-montano-food .jpg"></a>
                <span class="card-title"> {{userData.title}} </span>
                <a class="btn-floating halfway-fab waves-effect waves-light red">
                <i class="material-icons">favorite_border</i></a>
            </div>

            <div class="card-content1">
                <div class="input-field">
                    <p id="recipe3">
                        <label for="recipe3"><a href="/recipe/{{userData.id}}">Recipe Name: </a></label>
                        <span id="test"> &nbsp; {{userData.title}} </span>
                    </p>
                </div>

                <div class="input-field">
                    <p id="cookTime3" type="text">
                        <label for="cookTime3"> Prep/Cook Time: </label>
                        <span id="test2">&nbsp;{{userData.cook_time}}</span>
                    </p>
                </div>

                <div class="input-field">
                    <p id="ingredient3" type="text">
                        <label for="ingredient3">Instructions: </label>
                        <span id="test3"> &nbsp; {{userData.instructions}} </span>
                    </p>
                </div>

            </div>
        </div>

    </div>
{{/each}}